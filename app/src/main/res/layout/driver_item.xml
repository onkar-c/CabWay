<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/driver_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/ic_profile_icon"
            android:contentDescription="@string/add_profile_image"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="2dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tv_driver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_profile"
            android:layout_alignTop="@+id/iv_profile"
            android:layout_margin="3dp"
            android:textSize="@dimen/small_text"
            android:maxLines="2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_profile"
            android:layout_below="@id/tv_driver_name"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="@dimen/extra_small_text"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>

