<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:ignore="ContentDescription">

        <android.support.v7.widget.CardView
            android:id="@+id/top_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/ll_route_images"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_start_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_start" />

                    <ImageView
                        android:id="@+id/iv_mid_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_mid" />

                    <ImageView
                        android:id="@+id/iv_dest_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_dest" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_input"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_home_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/from_location"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingBottom="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        tools:ignore="Autofill" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#F5F5F5" />


                    <EditText
                        android:id="@+id/et_office_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/to_location"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingTop="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        tools:ignore="Autofill" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_reverse_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:background="@drawable/ic_reverse" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/il_car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_card_view"
            android:layout_marginTop="20dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_car_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/car_type_hint"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/il_date_of_journey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_car_type"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_date_of_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_journey_hint"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields"
                android:focusable="false"
                android:enabled="true"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/il_time_of_journey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_date_of_journey"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_time_of_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/time_of_journey_hint"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields"
                android:focusable="false"
                android:enabled="true"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/il_agency_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_time_of_journey"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_agency_mob_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/agency_number_hint"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/il_trip_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_agency_mobile_no"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_trip_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/trip_mode_hint"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/il_cost_of_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_trip_mode"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_cost_of_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cost_of_trip_hint"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_book_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"
            android:text="@string/book_a_ride"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_below="@+id/il_cost_of_trip"/>
    </RelativeLayout>

</ScrollView>