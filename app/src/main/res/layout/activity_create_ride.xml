<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="5dp"
    tools:context=".ui.activities.CreateRideActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:ignore="ContentDescription">

        <androidx.cardview.widget.CardView
            android:id="@+id/top_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/ll_route_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:id="@+id/iv_start_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/ic_start" />

                    <ImageView
                        android:id="@+id/iv_mid_image"
                        android:layout_width="20dp"
                        android:layout_height="25dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/ic_mid" />

                    <ImageView
                        android:id="@+id/iv_dest_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/ic_dest" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@id/ll_route_images"
                    android:layout_toStartOf="@+id/iv_reverse_image">

                    <EditText
                        android:id="@+id/et_home_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/from_location"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        tools:ignore="Autofill"
                        android:gravity="center_vertical"/>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#ECECEC" />


                    <EditText
                        android:id="@+id/et_office_loc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/to_location"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        tools:ignore="Autofill"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_reverse_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_reverse"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_card_view"
            android:layout_marginTop="20dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_car_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/car_type_hint"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_date_of_journey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_car_type"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_date_of_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/date_of_journey_hint"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_time_of_journey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_date_of_journey"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_time_of_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/time_of_journey_hint"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_agency_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_time_of_journey"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_agency_mob_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/agency_number_hint"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_trip_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_agency_mobile_no"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_trip_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/trip_mode_hint"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_trip_mode"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/distance_hint"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_cost_of_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/il_distance"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="@android:color/darker_gray">

            <EditText
                android:id="@+id/et_cost_of_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cost_of_trip_hint"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/small_text"
                tools:ignore="Autofill,TextFields" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_book_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/black"
            android:text="@string/book_a_ride"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_below="@+id/il_cost_of_trip"/>
    </RelativeLayout>

</ScrollView>